# Maintainer: Gonzalo Exequiel Pedone <hipersayan DOT x AT gmail DOT com>
# Contributor: cpasjuste <cpasjuste@gmail.com>

pkgname=android-${CARCH}-ffmpeg
pkgver=5.0
pkgrel=2
pkgdesc="Complete solution to record, convert and stream audio and video (android)"
arch=('any')
url="http://ffmpeg.org/"
license=('GPL3')
depends=("android-${CARCH}-bzip2"
         "android-${CARCH}-fribidi"
         "android-${CARCH}-lame"
         "android-${CARCH}-libtheora"
         "android-${CARCH}-libvorbis"
         "android-${CARCH}-libvpx"
         "android-${CARCH}-libwebp"
         "android-${CARCH}-opus"
         "android-${CARCH}-speex"
         "android-${CARCH}-zlib"
         "android-${CARCH}-openssl")
groups=('android-${CARCH}-portlibs')
options=(!strip !buildflags staticlibs !emptydirs)
makedepends=('android-environment' 'android-pkg-config')
source=("http://ffmpeg.org/releases/ffmpeg-${pkgver}.tar.xz")
md5sums=('be3a9c73f7b492cd98301ac2086f0862')

build() {
    cd "${srcdir}"/ffmpeg-${pkgver}
    source /opt/pacbrew/android/android-env.sh ${CARCH}

    case "$CARCH" in
        aarch64)
            target_arch=aarch64
            ;;
        armv7a)
            target_arch=arm
            ;;
        x86)
            target_arch=x86_32
            ;;
        x86-64)
            target_arch=x86_64
            ;;
    esac

    # TODO: enable asm
    configue_opts="
        --prefix="${ANDROID_PREFIX}"
        --enable-cross-compile
        --cross-prefix="${ANDROID_CROSS_PREFIX}"
        --target-os=android
        --arch=${target_arch}
        --sysroot="${ANDROID_SYSROOT}"
        --pkg-config=${ANDROID_PKGCONFIG}
        --cc=${ANDROID_CC}
        --cxx=${ANDROID_CXX}
        --ar=${ANDROID_AR}
        --ranlib=${ANDROID_RANLIB}
        --strip=${ANDROID_STRIP}
        --nm=${ANDROID_NM}
        --disable-debug
        --enable-static
        --disable-shared
        --disable-stripping
        --enable-gpl
        --enable-version3
        --enable-pic
        --disable-asm
        --disable-neon
        --disable-doc
        --disable-vulkan
        --disable-ffmpeg
        --disable-ffprobe
        --disable-libv4l2
        --disable-v4l2-m2m
        --disable-indev=v4l2
        --disable-outdev=v4l2
        --disable-encoders
        --disable-muxers
        --enable-libfribidi
        --enable-libmp3lame
        --enable-libopus
        --enable-libspeex
        --enable-libtheora
        --enable-libvorbis
        --enable-libvpx
        --enable-libwebp
        --enable-zlib"

    ./configure ${configue_opts}
}

package() {
    cd "${srcdir}"/ffmpeg-${pkgver}
    source /opt/pacbrew/android/android-env.sh ${CARCH}

    make DESTDIR="$pkgdir" install
    rm -r "${pkgdir}"/${ANDROID_PREFIX_SHARE}
    ${ANDROID_STRIP} -g "${pkgdir}"/${ANDROID_PREFIX_LIB}/*.a
}
